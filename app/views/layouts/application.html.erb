  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  <script src="http://maps.googleapis.com/maps/api/js"></script>

  <script>
  function initialize()
  {
    var mapProp = {
      center: new google.maps.LatLng(51.508742,-0.120850),
